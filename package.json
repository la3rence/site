    "dotenv": "17.2.1",
    "flexsearch": "^0.8.0",
    "gray-matter": "4.0.3",
    "hast-util-from-html": "^2.0.0",
    "hast-util-to-jsx-runtime": "^2.1.1",
    "markdown-it": "^14.0.0",
    "medium-zoom": "^1.1.0",
    "mongodb": "^6.0.0",
    "next": "15.4.7",
    "next-sitemap": "^4.0.0",
    "next-themes": "0.4.6",
    "node-cache": "^5.1.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-tweet": "3.2.2",
    "rehype-autolink-headings": "7.1.0",
