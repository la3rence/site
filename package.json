    "@shikijs/rehype": "^3.1.0",
    "@shikijs/transformers": "3.9.2",
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/typography": "0.5.16",
    "eslint": "9.33.0",
    "eslint-config-next": "15.4.7",
    "minify-xml": "^4.5.2",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "4.1.12",
    "typescript": "5.9.2",
