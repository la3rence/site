{
  "name": "lawrenceli.me",
  "version": "1.0.0",
  "markdown": "github",
  "scripts": {
    "dev": "pnpm feed && next dev -H 0.0.0.0 --turbo",
    "feed": "node ./lib/feed.mjs",
    "websub": "node ./lib/websub.mjs",
    "start": "next start",
    "build": "NEXT_PUBLIC_BUILDTIME=$(date '+%s') next build && pnpm feed && next-sitemap && pnpm llms",
    "lint": "next lint",
    "export": "next export",
    "fmt": "prettier --write .",
    "clean": "rm -rf .next; rm -rf node_modules",
    "llms": "mkdir -p public/blog && cp -r posts/* public/blog/ && cp *.md public/ "
  },
  "dependencies": {
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@microflash/rehype-figure": "^2.1.0",
    "@shikijs/transformers": "2.3.2",
    "@vercel/og": "^0.6.0",
    "disqus-react": "^1.1.5",
    "dotenv": "16.4.7",
    "flexsearch": "^0.7.31",
    "gray-matter": "4.0.3",
    "hast-util-from-html": "^2.0.0",
    "hast-util-to-jsx-runtime": "^2.1.1",
    "markdown-it": "^14.0.0",
    "medium-zoom": "^1.1.0",
    "mongodb": "^6.0.0",
    "next": "15.1.7",
    "next-sitemap": "^4.0.0",
    "next-themes": "0.4.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-tweet": "3.2.1",
    "rehype-autolink-headings": "7.1.0",
    "rehype-external-links": "3.0.0",
    "rehype-gist": "1.0.0",
    "rehype-pretty-code": "0.14.0",
    "rehype-slug": "6.0.0",
    "rehype-stringify": "10.0.1",
    "rehype-video": "2.3.0",
    "remark": "15.0.1",
    "remark-gfm": "4.0.1",
    "remark-rehype": "11.1.1",
    "shiki": "2.3.2",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/typography": "0.5.16",
    "eslint": "9.21.0",
    "eslint-config-next": "15.1.7",
    "postcss": "8.5.2",
    "prettier": "3.5.1",
    "tailwindcss": "4.0.8",
    "typescript": "5.7.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 100
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
